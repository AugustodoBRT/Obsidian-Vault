formulas:
  cover: image(cover)
views:
  - type: cards
    name: Filmes e Series
    filters:
      and:
        - file.inFolder("MyVault/Recursos/Biblioteca/FilmeseSeries")
    order:
      - file.name
      - personalRating
      - year
      - genres
    sort:
      - property: personalRating
        direction: DESC
    image: note.image
    imageAspectRatio: 1.15
    cardSize: 190
